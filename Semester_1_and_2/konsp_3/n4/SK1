
#!/bin/bash

script_name="rename_files.sh"  # Имя файла, который будет сгенерирован

cat << EOF > "$script_name"  # Создание файла и запись текста скрипта
#!/bin/bash

# Получение списка файлов в текущей директории и их переименование с изменением регистра
for file in *
do
    new_name=\$(echo "\$file" | tr '[:lower:]' '[:upper:]')  # Изменение регистра на прописные буквы
    mv "\$file" "\$new_name"  # Переименование файла
done

EOF

chmod +x "$script_name"  # Установка прав на выполнение файла

#./"$script_name"  # Запуск сгенерированного скрипта для переименования файлов
